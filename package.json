{
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "wsrun -t -m -c build",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "test-visual": "chromatic",
    "clean": "wsrun -m -c clean",
    "fmt": "prettier --write './**/*.{ts,tsx,js,md,json}'",
    "fmt:check": "prettier --list-different './**/*.{ts,tsx,js,md,json}'",
    "release": "yarn build && yarn changeset publish",
    "storybook": "start-storybook -p 5000"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.13.0",
    "@storybook/html": "^6.1.14",
    "@storybook/react": "^6.1.14",
    "@types/node": "^14.14.20",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.6.0",
    "monorepolint": "^0.5.0-alpha.51",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "wsrun": "^5.2.4"
  }
}
