{
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "wsrun -t -m -c build",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "test-visual": "chromatic",
    "clean": "wsrun -m -c clean",
    "fmt": "prettier --write './**/*.{ts,tsx,js,md,json}'",
    "fmt:check": "prettier --list-different './**/*.{ts,tsx,js,md,json}'",
    "release": "yarn build && yarn changeset publish",
    "storybook": "start-storybook -p 5000"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@changesets/changelog-github": "^0.2.6",
    "@changesets/cli": "^2.10.0",
    "@storybook/html": "^6.0.5",
    "@storybook/react": "^5.3.19",
    "@types/node": "^14.0.27",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.1.0",
    "monorepolint": "^0.5.0-alpha.49",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "wsrun": "^5.2.1"
  }
}
