{
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -ptv run build",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "test-visual": "chromatic",
    "clean": "yarn workspaces foreach -p run clean",
    "fmt": "prettier --write './**/*.{ts,tsx,js,md,json}'",
    "fmt:check": "prettier --list-different './**/*.{ts,tsx,js,md,json}'",
    "release": "yarn build && yarn changeset publish",
    "storybook": "start-storybook -p 5000"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@changesets/get-github-info": "^0.5.0",
    "@monorepolint/cli": "0.5.0-alpha.53",
    "@monorepolint/core": "0.5.0-alpha.53",
    "@storybook/html": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@types/node": "^14.14.37",
    "@yarnpkg/pnpify": "^2.4.0",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.8.3",
    "core-js": "^3.12.1",
    "dotenv": "^9.0.2",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
